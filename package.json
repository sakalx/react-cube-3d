{
  "name": "react-cube3d-component",
  "version": "1.0.8",
  "description": "React cube-3d UI component",
  "main": "dist/",
  "browserslist": [
    "> 1%",
    "ie >= 11",
    "not op_mini all"
  ],
  "babel": {
    "presets": [
      [
        "@babel/env",
        {
          "targets": {
            "browsers": [
              "> 1%",
              "ie >= 11",
              "not op_mini all"
            ]
          }
        }
      ],
      "@babel/react"
    ],
    "plugins": [
      "@babel/plugin-proposal-class-properties",
      "@babel/transform-runtime"
    ]
  },

  "postcss": {
    "plugins": {
      "postcss-preset-env": {},
      "cssnano": { "safe": true }
    }
  },

  "scripts": {
    "clean": "rimraf dist",
    "start": "webpack-dev-server --mode development",
    "build-package": "npm run clean && npm run transpile-css && npm run transpile-js",
    "build-example": "webpack --mode production",
    "deploy": "gh-pages -d example/dist",
    "publish-npm": "npm run build-package && npm publish",
    "publish-git": "npm run build-package && npm run build-example && npm run deploy",
    "transpile-css": "postcss src/style.css --no-map --output=dist/style.css",
    "transpile-js": "babel src/**/*.js -d dist --copy-files"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sakalx/react-cube-3d"
  },
  "keywords": [
    "3D",
    "cube",
    "cube-3d",
    "react",
    "react-component",
    "UI"
  ],
  "author": "Sakal Serhii",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sakalx/react-cube-3d/issues"
  },
  "homepage": "https://sakalx.github.io/react-cube-3d",
  "peerDependencies": {
    "react": "^16.8.0",
    "react-dom": "^16.8.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.0.0",
    "@babel/plugin-proposal-class-properties": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "@babel/runtime": "^7.0.0",
    "babel-loader": "^8.0.0",
    "css-loader": "^2.1.1",
    "cssnano": "^4.1.10",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "gh-pages": "^2.0.0",
    "html-webpack-plugin": "^5.5.1",
    "postcss-cli": "^6.1.2",
    "postcss-preset-env": "^6.6.0",
    "react": "^16.8.0",
    "react-dom": "^16.8.0",
    "style-loader": "^0.23.0",
    "webpack": "^4.19.1",
    "webpack-cli": "^3.1.1",
    "webpack-dev-server": "^3.1.8"
  }
}
